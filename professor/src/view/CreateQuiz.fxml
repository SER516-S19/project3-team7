                </TextField>
                <HBox prefHeight="20.0" prefWidth="680.0">
                    <children>
                        <Label text="Option 3:" />
                        <CheckBox fx:id="checkOption3" mnemonicParsing="false" text="Check if correct answer.">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                        </CheckBox>
                    </children>
                </HBox>
                <TextField fx:id="option3" alignment="TOP_LEFT" promptText="Option 3">
