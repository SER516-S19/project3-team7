                                <Insets left="5.0" />
                            </HBox.margin>
                        </CheckBox>
                    </children>
                </HBox>
                <TextField fx:id="option1" alignment="TOP_LEFT" promptText="Option 1">
                    <VBox.margin>
                        <Insets bottom="20.0" top="5.0" />
